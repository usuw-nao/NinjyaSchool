<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.mapper.ItemMapper">

	<select id="selectItems"
		resultType="com.example.app.domain.Item">
		SELECT * FROM items
	</select>

	<insert id="addItem" parameterType="com.example.app.domain.Item">
		INSERT INTO items (itemId, name, number, no, yes, destroy, text)
		VALUES(#{itemId}, #{name}, #{number}, #{no}, #{yes}, #{destroy},
		#{text})
	</insert>

	<delete id="deleteById" parameterType="int">
		DELETE FROM items
		WHERE id = #{id}
	</delete>

</mapper>